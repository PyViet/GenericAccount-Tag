
@{
    ViewBag.Title = "Home";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    $(function () {
        var currentImg = 1;
        $('#img1').fadeIn(300);
        $('img').on('click', switchImg);

        function switchImg() {
            $('#img' + currentImg).fadeOut(500).delay(250, updateImg);       
        }

        function updateImg(){
            currentImg++;
            if (currentImg > 9) {
                currentImg = 1;
            }
            $('#img' + currentImg).fadeIn(500);
        }
    });
</script>
